<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if showcase.redirect %}{{ showcase.redirect }}{% else %}{{ showcase.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if showcase.img %}
        {%
          include figure.liquid
          loading="eager"
          path=showcase.img
          sizes = "250px"
          alt="showcase thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ showcase.title }}</h2>
        <p class="card-text">{{ showcase.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if showcase.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ showcase.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if showcase.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ showcase.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
