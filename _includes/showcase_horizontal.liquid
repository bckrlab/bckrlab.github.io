<div class="card-item col">
  {%- if showcase.redirect -%}
  <a href="{{ showcase.redirect }}">
  {%- else -%}
  <a href="{{ showcase.url | relative_url }}">
  {%- endif -%}
    <div class="card hoverable">
      <div class="row g-0">
        {%- if showcase.img -%}
        <div class="card-img col-md-6">
          {% include figure.liquid path=showcase.img alt="showcase thumbnail" %}
        </div>
        <div class="col-md-6">
        {%- else -%}
        <div class="col-md-12">
        {%- endif -%}
          <div class="card-body">
            <h3 class="card-title text-lowercase"> 
              {%- if showcase.title-short -%}
                {{ showcase.title-short}}
              {%- else -%}
                {{ showcase.title }}
              {%- endif -%}
            </h3>
            <p class="card-text">{{ showcase.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {%- if showcase.github -%}
              <div class="github-icon">
                <div class="icon" data-toggle="tooltip" title="Code Repository">
                  <a href="{{ showcase.github }}"><i class="fab fa-github gh-icon"></i></a>
                </div>
                {%- if showcase.github_stars -%}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fas fa-star"></i>
                  <span id="{{ showcase.github_stars }}-stars"></span>
                </span>
                {%- endif -%}
              </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
